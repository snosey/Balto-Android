<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteDark"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/calenderLL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_VerySmall"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.example.snosey.balto.Support.CustomTextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:background="@color/red"
            android:drawablePadding="@dimen/margin_Small"
            android:gravity="start|center_vertical"
            android:padding="@dimen/margin_Medium"
            android:textColor="@color/white"
            android:textSize="@dimen/text_Medium"
            app:drawableStartCompat="@drawable/agenda" />

        <Button
            android:id="@+id/all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:background="@color/red"
            android:text="@string/all"
            android:textColor="@color/white"
            android:textSize="@dimen/text_VerySmall" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dateLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:padding="@dimen/margin_Medium"
            android:weightSum="7">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/day1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/margin_Medium"
                android:text="1"
                android:textSize="@dimen/text_VerySmall" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/day2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/margin_Medium"
                android:text="2"
                android:textSize="@dimen/text_VerySmall" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/day3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/margin_Medium"
                android:text="3"
                android:textSize="@dimen/text_VerySmall" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/day4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/margin_Medium"
                android:text="4"
                android:textSize="@dimen/text_VerySmall" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/day5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/margin_Medium"
                android:text="5"
                android:textSize="@dimen/text_VerySmall" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/day6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/margin_Medium"
                android:text="6"
                android:textSize="@dimen/text_VerySmall" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/day7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/margin_Medium"
                android:text="7"
                android:textSize="@dimen/text_VerySmall" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_Medium"
            android:paddingEnd="@dimen/margin_Medium"
            android:paddingStart="@dimen/margin_Medium"
            android:weightSum="7">

            <com.example.snosey.balto.Support.CustomTextView
                android:id="@+id/day1text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_VerySmall" />

            <com.example.snosey.balto.Support.CustomTextView
                android:id="@+id/day2text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_VerySmall" />

            <com.example.snosey.balto.Support.CustomTextView
                android:id="@+id/day3text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_VerySmall" />

            <com.example.snosey.balto.Support.CustomTextView
                android:id="@+id/day4text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_VerySmall" />

            <com.example.snosey.balto.Support.CustomTextView
                android:id="@+id/day5text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_VerySmall" />

            <com.example.snosey.balto.Support.CustomTextView
                android:id="@+id/day6text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_VerySmall" />

            <com.example.snosey.balto.Support.CustomTextView
                android:id="@+id/day7text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_VerySmall" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/red" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/reservationRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>