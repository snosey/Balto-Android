<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:clickable="true"
    android:orientation="vertical">


        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="@dimen/dimen_VerySmall"
            android:layout_height="@dimen/dimen_VerySmall"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/margin_Medium"
            android:background="@android:color/transparent"
            android:onClick="back"
            app:srcCompat="@drawable/back" />



    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_VerySmall"
        android:layout_alignParentBottom="true"
        android:id="@+id/signup_facebook"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_Medium"
        android:layout_marginLeft="@dimen/margin_Large"
        android:layout_marginRight="@dimen/margin_Large"
        android:background="@drawable/button_rounded"
        android:backgroundTint="@color/blue"
        android:drawableLeft="@drawable/fb_logo"
        android:padding="@dimen/margin_Medium"
        android:textAllCaps="false"
        android:text="@string/signup_facebook"
        android:textColor="@color/white" />

    <!-- Or -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/orRl"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/or"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_Large"
            android:layout_marginRight="@dimen/margin_Large"
            android:layout_toLeftOf="@id/or"
            android:background="@drawable/line" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_Large"
            android:layout_marginRight="@dimen/margin_Large"
            android:layout_toRightOf="@id/or"
            android:background="@drawable/line" />
    </RelativeLayout>



    <Button
        android:id="@+id/Create_Account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_VerySmall"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_Medium"
        android:layout_marginLeft="@dimen/margin_Large"
        android:layout_marginRight="@dimen/margin_Large"
        android:background="@drawable/button_rounded_stroked"
        android:padding="@dimen/margin_Medium"
        android:textAllCaps="false"
        android:onClick="CreateAccount"
        android:text="@string/create_account"
        android:textColor="@color/white" />

</LinearLayout>