<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteDark"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="14">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/line" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatImageButton
        android:layout_width="@dimen/dimen_VerySmall"
        android:layout_height="@dimen/dimen_VerySmall"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/margin_Medium"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/black_8am2"
        android:visibility="gone"
        app:srcCompat="@drawable/back" />


    <com.example.snosey.balto.Support.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_Medium"
        android:layout_marginStart="@dimen/margin_Large"
        android:layout_marginTop="@dimen/dimen_VerySmall"
        android:text="@string/addToWallet"
        android:textColor="@color/black_8am2"
        android:textSize="@dimen/text_Large"
        android:visibility="visible" />


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_Medium"
        android:orientation="vertical"
        android:visibility="visible">

        <RadioButton
            android:id="@+id/aman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_Medium"
            android:buttonTint="@color/black_8am2"
            android:checked="true"
            android:text="@string/aman"
            android:textColor="@color/black_8am2" />

        <RadioButton
            android:id="@+id/wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_Medium"
            android:buttonTint="@color/black_8am2"
            android:text="@string/ewallet"
            android:textColor="@color/black_8am2" />


        <RadioButton
            android:id="@+id/credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_Medium"
            android:buttonTint="@color/black_8am2"
            android:visibility="gone"
            android:text="@string/credit"
            android:textColor="@color/black_8am2" />
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:hint="@string/Amount"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_Medium"
            android:layout_toStartOf="@id/egp"
            android:maxLength="5"
            android:inputType="number"
            android:id="@+id/amount"
            android:padding="@dimen/margin_Small" />

        <com.example.snosey.balto.Support.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_Medium"
            android:layout_marginEnd="@dimen/margin_xlarge"
            android:id="@+id/egp"
            android:layout_toStartOf="@id/next"
            android:padding="@dimen/margin_Small"
            android:text="@string/egp" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_margin="@dimen/margin_Medium"
            android:background="@drawable/circel"
            android:tint="@color/white"
            app:backgroundTint="@color/colorPrimary"
            app:srcCompat="@drawable/next" />

    </RelativeLayout>

    <com.example.snosey.balto.Support.CustomTextView
        android:id="@+id/addEditCredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_Large"
        android:paddingStart="@dimen/margin_Medium"
        android:text="@string/addOrChangeCredit"
        android:textColor="@color/black_8am2"
        android:textSize="@dimen/text_Small" />

    <com.example.snosey.balto.Support.CustomTextView
        android:id="@+id/saved_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_Large"
        android:layout_marginTop="@dimen/margin_Large"
        android:background="@drawable/rounded_shape_stroke"
        android:drawablePadding="@dimen/margin_Medium"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_Small"
        android:paddingEnd="@dimen/margin_Medium"
        android:paddingStart="@dimen/margin_Medium"
        android:paddingTop="@dimen/margin_Small"
        android:textSize="@dimen/text_Small" />


</LinearLayout>