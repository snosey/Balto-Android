<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">


    <com.example.snosey.balto.Support.CustomTextView
        android:id="@+id/lang"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_VMedium"
        android:layout_marginEnd="@dimen/margin_Medium"
        android:background="@drawable/shadow"
        android:backgroundTint="#94ffffff"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:onClick="lang"
        android:text="@string/ENAR"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_Small"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_VerySmall"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_Large"
        android:background="@drawable/button_rounded"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:backgroundTint="@color/black_fat7" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_VerySmall"
        android:layout_above="@id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/margin_Large"
        android:layout_marginEnd="@dimen/margin_Large"
        android:background="@drawable/button_rounded"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/signup"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:backgroundTint="@color/red" />

</RelativeLayout>
