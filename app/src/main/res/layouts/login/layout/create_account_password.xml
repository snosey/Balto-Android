<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:clickable="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="14">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="13"
            android:background="@drawable/line" />

    </LinearLayout>

    <ImageButton
        android:layout_width="@dimen/dimen_VerySmall"
        android:layout_height="@dimen/dimen_VerySmall"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/margin_Medium"
        android:background="@android:color/transparent"
        android:onClick="back"
        android:src="@drawable/back" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_Large"
        android:layout_marginTop="@dimen/margin_Medium"
        android:text="Create a password"
        android:textColor="@color/white"
        android:textSize="@dimen/text_Large" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_Medium"
        android:layout_marginLeft="@dimen/margin_Large"
        android:text="Your password be between 8 or 20 character"
        android:textColor="@color/white"
        android:textSize="@dimen/text_VerySmall" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_Large"
        android:layout_marginTop="@dimen/margin_Medium"
        android:text="@string/password"
        android:textColor="@color/white"
        android:textSize="@dimen/text_Medium" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_Large"
        android:layout_marginRight="@dimen/margin_Large"
        android:backgroundTint="@color/white"
        android:inputType="textPassword"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/margin_Medium"
        android:background="@drawable/circel"
        android:src="@drawable/next" />


</LinearLayout>