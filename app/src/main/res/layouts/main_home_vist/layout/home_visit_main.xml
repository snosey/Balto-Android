<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        tools:context="com.example.snosey.balto.MainActivity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_Medium"
        android:layout_weight=".05"
        android:gravity="center"
        android:text="@string/selectService"
        android:textColor="@color/black_8am2"
        android:textSize="@dimen/text_Large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:orientation="horizontal"
        android:weightSum="4">

        <!-- doctor -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_Small"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/doctorIcon"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".8" />

            <TextView
                android:id="@+id/doctorText"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black_8am2"
                android:textSize="@dimen/text_Small" />
        </LinearLayout>


        <!-- nurse -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_Small"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nurseIcon"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".8" />

            <TextView
                android:id="@+id/nurseText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black_8am2"
                android:textSize="@dimen/text_Small" />
        </LinearLayout>


        <!-- nurseAid -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_Small"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nurseAidIcon"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".8" />

            <TextView
                android:id="@+id/nurseAidText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/black_8am2"
                android:textSize="@dimen/text_Small" />
        </LinearLayout>


        <!-- 3elag tabe3y -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_Small"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tabe3yIcon"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".8" />

            <TextView
                android:id="@+id/tabe3yText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black_8am2"
                android:textSize="@dimen/text_Small" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
