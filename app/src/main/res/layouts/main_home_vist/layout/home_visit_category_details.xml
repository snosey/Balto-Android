<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/dimen_Small"
            android:layout_height="79dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_Medium" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black_8am2"
            android:textSize="@dimen/text_Medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_Large"
            android:gravity="center"
            android:textColor="@color/black_8am2"
            android:textSize="@dimen/text_Small" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_Large"
            android:src="@drawable/line"
            android:tint="@color/colorPrimary" />

        <!-- base fare -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/margin_Medium"
                android:drawablePadding="@dimen/margin_Medium"
                android:drawableStart="@drawable/money"
                android:gravity="center"
                android:text="@string/baseFare" />

            <TextView
                android:id="@+id/baseFare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/margin_Medium" />

        </RelativeLayout>

        <!-- service duration -->
        <RelativeLayout
            android:id="@+id/durationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/serviceDurationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/margin_Medium"
                android:drawablePadding="@dimen/margin_Medium"
                android:drawableStart="@drawable/time"
                android:gravity="center"
                android:text="@string/serviceDuration" />


            <TextView
                android:id="@+id/serviceDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/margin_Medium"
                android:text="1"
                android:textColor="@color/black_8am2" />

            <SeekBar
                android:id="@+id/durationSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/margin_Medium"
                android:layout_toEndOf="@id/serviceDurationText"
                android:layout_toStartOf="@id/serviceDuration"
                android:thumbTint="@color/colorPrimary" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/paymentWay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/margin_Medium"
                android:drawablePadding="@dimen/margin_Medium"
                android:drawableStart="@drawable/payment"
                android:gravity="center"
                android:text="@string/cash" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/margin_Medium"
                android:gravity="center"
                android:text="@string/change" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_Large"
            android:layout_marginStart="@dimen/margin_Large"
            android:layout_marginTop="@dimen/margin_Medium"
            android:text="@string/gender"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_Medium"
                android:buttonTint="@color/red"
                android:checked="true"
                android:text="@string/Male" />


            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_Medium"
                android:buttonTint="@color/red"
                android:text="@string/Female" />


            <RadioButton
                android:id="@+id/both"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_Medium"
                android:buttonTint="@color/red"
                android:text="@string/Both" />
        </RadioGroup>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_Medium"
            android:layout_marginEnd="@dimen/margin_Large"
            android:layout_marginStart="@dimen/margin_Large"
            android:layout_marginTop="@dimen/margin_Large"
            android:text="@string/promoCodeRequest"
            android:textColor="@color/black_8am2"
            android:textSize="@dimen/text_Small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_Large"
            android:layout_marginStart="@dimen/margin_Large"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/promoCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:backgroundTint="@color/red"
                android:inputType="textEmailAddress"
                android:textColor="@color/red" />

            <Button
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_VerySmall"
                android:layout_gravity="center"
                android:layout_weight=".3"
                android:background="@color/red"
                android:text="@string/confirm"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_Small" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/margin_Medium"
            android:background="@drawable/circel"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/next"
            android:tint="@color/white" />


    </LinearLayout>
</ScrollView>
