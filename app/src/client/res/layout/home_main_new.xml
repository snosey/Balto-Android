<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3.8">

    <com.example.snosey.balto.Support.CustomTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:background="@color/colorPrimaryShfaf"
        android:gravity="bottom"
        android:padding="@dimen/margin_Large"
        android:text="Hi, Ahmed\nWhat`s next?"
        android:textColor="@color/white"
        android:textSize="@dimen/text_SoLarge" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/chatting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_Medium"
                android:layout_margin="@dimen/margin_Medium"
                android:src="@drawable/chatting_en"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/onlineConsult"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_Medium"
                android:layout_margin="@dimen/margin_Medium"
                android:src="@drawable/book_anappoinment" />

            <ImageView
                android:id="@+id/homeVisiting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_Medium"
                android:layout_margin="@dimen/margin_Medium"
                android:src="@drawable/see_medical" />


            <ImageView
                android:id="@+id/shareApp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_Medium"
                android:layout_margin="@dimen/margin_Medium"
                android:src="@drawable/share_app" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
