<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteDark"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/margin_Medium"
        android:text="@string/reservation2"
        android:textColor="@color/white"
        android:textSize="@dimen/text_Medium" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/red" />

    <RelativeLayout
        android:id="@+id/mainData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow2">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/dimen_Small"
            android:layout_height="@dimen/dimen_Small"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/margin_Medium"
            android:src="@drawable/logo_profile" />


        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/money"
            android:drawablePadding="@dimen/margin_Medium"
            android:ellipsize="end"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:padding="@dimen/margin_Small" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/price"
            android:layout_toEndOf="@id/logo"
            android:layout_toStartOf="@id/price"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/margin_Small" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_toEndOf="@id/logo"
            android:ellipsize="end"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:padding="@dimen/margin_Small"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/type"
            android:layout_toEndOf="@id/logo"
            android:drawablePadding="@dimen/margin_Medium"
            android:drawableStart="@drawable/star"
            android:ellipsize="end"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:padding="@dimen/margin_Small"
            android:text="5" />

        <TextView
            android:id="@+id/rateNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/type"
            android:drawablePadding="@dimen/margin_Medium"
            android:ellipsize="end"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:padding="@dimen/margin_Small"
            android:textColor="@color/colorPrimary" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteDark"
        android:orientation="horizontal"
        android:padding="@dimen/margin_Medium"
        android:weightSum="7">

        <Button
            android:id="@+id/day1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/margin_Medium"
            android:text="1"
            android:textSize="@dimen/text_Large" />

        <Button
            android:id="@+id/day2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/margin_Medium"
            android:text="2"
            android:textSize="@dimen/text_Large" />

        <Button
            android:id="@+id/day3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/margin_Medium"
            android:text="3"
            android:textSize="@dimen/text_Large" />

        <Button
            android:id="@+id/day4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/margin_Medium"
            android:text="4"
            android:textSize="@dimen/text_Large" />

        <Button
            android:id="@+id/day5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/margin_Medium"
            android:text="5"
            android:textSize="@dimen/text_Large" />

        <Button
            android:id="@+id/day6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/margin_Medium"
            android:text="6"
            android:textSize="@dimen/text_Large" />

        <Button
            android:id="@+id/day7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/margin_Medium"
            android:text="7"
            android:textSize="@dimen/text_Large" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteDark"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_Medium"
        android:paddingEnd="@dimen/margin_Medium"
        android:paddingStart="@dimen/margin_Medium"
        android:weightSum="7">

        <TextView
            android:id="@+id/day1text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_Small" />

        <TextView
            android:id="@+id/day2text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_Small" />

        <TextView
            android:id="@+id/day3text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_Small" />

        <TextView
            android:id="@+id/day4text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_Small" />

        <TextView
            android:id="@+id/day5text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_Small" />

        <TextView
            android:id="@+id/day6text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_Small" />

        <TextView
            android:id="@+id/day7text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_Small" />

    </LinearLayout>


    <TextView
        android:id="@+id/notAvailable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/margin_Medium"
        android:text="@string/notAvailable"
        android:textSize="@dimen/text_Medium"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/agendaRV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_Medium" />

</LinearLayout>
