<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_Medium"
    android:background="@drawable/shadow2">

    <Button
        android:id="@+id/book"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_VerySmall"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/margin_Medium"
        android:background="@drawable/button_rounded"
        android:backgroundTint="@color/colorPrimary"
        android:padding="@dimen/margin_Small"
        android:text="@string/reservation2"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/dimen_Small"
        android:layout_height="@dimen/dimen_Small"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/margin_Medium"
        android:src="@drawable/logo_profile" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/book"
        android:layout_alignBottom="@id/book"
        android:layout_toEndOf="@id/logo"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="@dimen/margin_Small" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_toEndOf="@id/logo"
        android:ellipsize="end"
        android:gravity="end|center_vertical"
        android:maxLines="1"
        android:padding="@dimen/margin_Small"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/type"
        android:layout_toEndOf="@id/logo"
        android:drawableStart="@drawable/star"
        android:drawablePadding="@dimen/margin_Medium"
        android:ellipsize="end"
        android:gravity="end|center_vertical"
        android:maxLines="1"
        android:padding="@dimen/margin_Small"
        android:text="5" />


    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/type"
        android:layout_alignParentEnd="true"
        android:drawableEnd="@drawable/money"
        android:drawablePadding="@dimen/margin_Medium"
        android:ellipsize="end"
        android:gravity="end|center_vertical"
        android:maxLines="1"
        android:padding="@dimen/margin_Small" />


</RelativeLayout>