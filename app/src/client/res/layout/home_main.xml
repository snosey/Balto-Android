<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/onlineConsult"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/margin_VerySmall"
        android:layout_weight=".5"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".8"
            android:padding="@dimen/margin_Medium"
            android:src="@drawable/online" />

        <TextView
            android:id="@+id/onlineConsultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_margin="@dimen/margin_small"
            android:background="@drawable/button_rounded"
            android:backgroundTint="#94ffffff"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/margin_small"
            android:text="@string/onlineMain"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_VerySmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".13" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/homeVisiting"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".8"
            android:padding="@dimen/margin_Medium"
            android:src="@drawable/home_main" />

        <TextView
            android:id="@+id/homeVisitText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_margin="@dimen/margin_small"
            android:background="@drawable/button_rounded"
            android:backgroundTint="#94ffffff"

            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/margin_small"
            android:text="@string/homeMain"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_VerySmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".13" />
    </LinearLayout>


</LinearLayout>
